{
  "manifest_version": 2,

  "name": "Screen Marker",
  "description": "A browser plugin for marking up screen grabs.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Create a screen markup"
  },
  "commands": {
    "capture-screen": {
      "suggested_key": { 
        "default": "Ctrl+Shift+P"
      },
      "description": "Capture current screen",
      "global": true
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "pageCapture"
  ]
}